<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:layout_centerHorizontal="true"
        android:textSize="34dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="23dp"
        android:layout_marginTop="75pt"
        android:textSize="23dp"
        android:id="@+id/txt_username"
        android:text="Username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70pt"
        android:hint="Write Username"
        android:id="@+id/edit_username"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_password"
        android:layout_below="@+id/txt_username"
        android:layout_marginStart="23dp"
        android:textSize="23dp"
        android:text="Password"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_username"
        android:hint="Enter Password"
        android:id="@+id/edit_password"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/txt_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_password"
        android:layout_marginStart="23dp"
        android:layout_marginTop="22dp"
        android:text="Department"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_password"
        android:hint="Enter Department"
        android:id="@+id/edit_department"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_department"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#034443"
        android:text="Signup"
        android:textColor="#ffffff"
        android:id="@+id/button"
        android:onClick="onClick"
        android:textStyle="bold"/>




</RelativeLayout>