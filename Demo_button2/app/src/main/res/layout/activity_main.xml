<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yuvraj Soni"
        android:id="@+id/simple_button"
        />
    <Button
        android:id="@+id/simpleButton1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:text="Yuvraj Soni"
        android:layout_centerInParent="true"
        android:gravity="right|center_vertical"/><!-- the Gravity of button-->

    <Button
        android:id="@+id/simpleButton2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:text="Yuvraj Soni"
        android:layout_centerInParent="true"
        android:textColor="#9FB7D5"/>


    <Button
        android:id="@+id/simpleButton3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:text="Yuvraj Soni"
        android:textSize="25sp" />


</LinearLayout>